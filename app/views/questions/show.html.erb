<p>
  <strong>Question:</strong>
  <%= @question.question %>

  <% @question.answers.each do |ans| %>
      <% if ans.question_id == @question.id %>
        <div>Answer:
          <%= ans.answer %>
          <% if ans.correctAnswer %>
          (Correct)
          <% end %>
        </div>
    <% end %>
<% end %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
